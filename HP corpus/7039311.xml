	<sentence id="7039311.s2" text="Contractures at other major joints are variable.">
		<entity id="7039311.s2.e0" charOffset="0-12"
			type="HP" text="Contractures" ontology_id="HP_0001371"/>
		<entity id="7038311.s2.e1" charOffset="38-46"
			type="HP" text="variable" ontology_id="HP_0003813"/>
	</sentence>
	<sentence id="7039311.s3" text="There are no associated visceral anomalies; intelligence is normal.">
		<entity id="7039311.s3.e0" charOffset="23-41"
			type="HP" text="visceral anomalies" ontology_id="HP_0002012"/>
	</sentence>
	<sentence id="7039311.s4" text="There can be marked intrafamilial and interfamilial variability.">
		<entity id="7039311.s4.e0" charOffset="20-63"
			type="HP" text="intrafamilial and interfamilial variability" ontology_id="HP_0003822"/>
	</sentence>
	<sentence id="7039311.s5" text="Twenty-two propositi with similar distal contractures had additional findings and were classified into five subcategories of distal arthrogryposis (type IIA-E).">
		<entity id="7039311.s5.e0" charOffset="36-55"
			type="HP" text="distal contractures" ontology_id="HP_0005684"/>
